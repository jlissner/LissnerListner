mixin string(obj, field, title, required)
	.form-group(duck-field=field, duck-type='string')&attributes(attributes)
		if (title)
			label= title
				input.form-control(type='text', duck-value, value= obj && obj[field], required=required)
		else
			input.form-control(type='text', duck-value, value= obj && obj[field], required=required)