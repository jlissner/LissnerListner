mixin formStart(item, tableName, show= true, duckFunction= 'update', key= 'Id')
	if userIsAuthorized(user)
		div(duck-table= tableName, duck-function=duckFunction, duck-key=key, duck-key-value= duckFunction === 'update' ? item[key] : uuid(), duck-edit-form='view')&attributes(attributes)
			block
	else if show
		div&attributes(attributes)
			block
